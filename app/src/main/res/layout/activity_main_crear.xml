<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainCrear">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/_2fe2d46e9cda2614708f616c8991264"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/images_2_removebg_preview"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="482dp" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="199dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="271dp">

        <EditText
            android:id="@+id/addnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Nombre:"
            android:inputType="textPersonName"
            android:textColorHint="#BB29C6"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/addedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Edad:"
            android:inputType="textPersonName"
            android:textColorHint="#BB29C6"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/addcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Color:"
            android:inputType="textPersonName"
            android:textColorHint="#BB29C6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_Resgistrar"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="#E77DEF"
            android:fontFamily="sans-serif-black"
            android:text="Agregar Mascota"
            android:textColor="#9C740D"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Mascoteria Lunar"
        android:textColor="#BB29C6"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="44dp" />

</androidx.constraintlayout.widget.ConstraintLayout>